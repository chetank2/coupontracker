{
  "pattern_recognition": {
    "min_text_height": 20,
    "min_text_width": 50,
    "text_padding": 10,
    "clustering_eps": 50,
    "clustering_min_samples": 2,
    "element_patterns": {
      "store": [
        "(?i)myntra",
        "(?i)swiggy",
        "(?i)phonepe",
        "(?i)amazon",
        "(?i)flipkart",
        "(?i)citizen"
      ],
      "code": [
        "(?i)code[:\\s]*([A-Z0-9]{4,})",
        "(?i)use[:\\s]*([A-Z0-9]{4,})",
        "(?i)^[A-Z0-9]{5,}$"
      ],
      "amount": [
        "(?i)(\\d+)%\\s*off",
        "(?i)₹\\s*(\\d+)",
        "(?i)flat\\s*(\\d+)",
        "(?i)save\\s*(\\d+)"
      ],
      "expiry": [
        "(?i)valid\\s*(?:till|until)[:\\s]*(\\d{1,2}[/.-]\\d{1,2}[/.-]\\d{2,4})",
        "(?i)expires?\\s*(?:on)?[:\\s]*(\\d{1,2}[/.-]\\d{1,2}[/.-]\\d{2,4})"
      ],
      "description": [
        "(?i)on\\s*(?:all|select|orders)",
        "(?i)minimum\\s*(?:order|purchase)"
      ]
    }
  },
  "error_recovery": {
    "max_retry_attempts": 3,
    "retry_delay": 1,
    "retry_backoff": 2,
    "fallback_methods": [
      "adaptive_threshold",
      "gaussian_blur",
      "sharpen",
      "histogram_equalization"
    ]
  },
  "resource_management": {
    "max_workers": 4,
    "memory_limit_mb": 1024,
    "image_size_limit": [1920, 1080],
    "cleanup_interval": 10
  },
  "ocr_configs": {
    "default": "--oem 3 --psm 6",
    "store": "--oem 3 --psm 7 -c tessedit_char_whitelist=ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789&-. ",
    "code": "--oem 3 --psm 7 -c tessedit_char_whitelist=ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789",
    "amount": "--oem 3 --psm 7 -c tessedit_char_whitelist=0123456789.,%₹$ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ",
    "expiry": "--oem 3 --psm 7 -c tessedit_char_whitelist=0123456789/-.ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ",
    "description": "--oem 3 --psm 6 -c tessedit_char_whitelist=ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 .,;:!?%₹$()-_"
  },
