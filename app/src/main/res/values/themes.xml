<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CouponTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.CouponTracker.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.CouponTracker.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.CouponTracker.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.CouponTracker.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.CouponTracker.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CouponTracker.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CouponTracker.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.CouponTracker.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CouponTracker.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CouponTracker.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CouponTracker.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.CouponTracker.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.CouponTracker.Overline</item>
    </style>

